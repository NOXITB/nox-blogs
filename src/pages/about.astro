---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'About';
const description = 'About your blog.';
const permalink = `${Astro.site.href}about`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="about">
  <div class="container">
    <h1>About</h1>
    <figure class="about-image">
      <img src="/assets/about-illustration.webp" alt="Illustration of a notebook" width="330">
      <figcaption>
        Illustration by
        <a href="https://icons8.com/illustrations/author/5c07e68d82bcbc0092519bb6" target="_blank" rel="noopener">Icons 8</a>
        from
        <a href="https://icons8.com/illustrations" target="_blank" rel="noopener">Ouch!</a>
      </figcaption>
    </figure>
    <!-- Replace the placeholder text with information about Blake's interests -->
    <p>My name is Blake, and I'm passionate about coding, servers, and homelab setups. These interests allow me to explore the realms of technology and create innovative solutions.</p>
    <p>Whether it's diving into complex code or configuring servers, I find joy in unraveling the intricacies of these fields.</p>
    <p>Join me on this journey of exploration and learning!</p>
  </div>
</BaseLayout>

<style>
  <!-- Styles for the about-image -->
  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 8px;
    margin-bottom: 1.5em;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
    }
  }
</style>

