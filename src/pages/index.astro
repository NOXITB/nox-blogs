---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      body {
        color: white;
        background-color: #111827;
        margin: 0;
        font-family: Arial, sans-serif;
      }
      a {
        color: white;
        text-decoration: underline;
      }
      a:hover {
        color: #6ee7b7;
      }
      main {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px;
      }
      h1 {
        font-size: 2.5rem;
        margin-bottom: 20px;
      }
      p {
        font-size: 1rem;
        margin-bottom: 20px;
        line-height: 1.6;
      }
      code {
        background-color: #1d2d3f;
        color: white;
        padding: 2px 4px;
        border-radius: 4px;
      }
      ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
      }
      li {
        margin: 0;
      }
      .social-buttons {
        display: flex;
        gap: 10px;
        margin-top: 20px;
      }

      .social-button {
        padding: 10px 20px;
        background-color: #6ee7b7;
        color: #111827;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        cursor: pointer;
      }

      .social-button:hover {
        background-color: #48c7a1;
      }
    </style>
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <h1>üßë‚Äçüíª Welcome to My Coding World!</h1>
      <p>
        I'm [Your Name], a passionate coder and developer. This is my personal
        space where I share my coding adventures, projects, and thoughts about
        the tech world.
      </p>
      <p>
        Whether I'm working on a web app, diving into algorithmic challenges, or
        exploring new technologies, you'll find it all here.
      </p>
      <p>Explore my latest blog posts and join me on my coding journey!</p>
      <section>
        <h2>Recent Blog Posts</h2>
        <ul>
          {
            posts.slice(0, 3).map((post) => (
              <li>
                <a href={`/blog/${post.slug}/`}>
                  <img
                    width={720}
                    height={360}
                    src={post.data.heroImage}
                    alt=""
                  />
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
      <div class="social-buttons">
        <a
          href="https://www.youtube.com/your-channel-link"
          class="social-button">YouTube</a
        >
        <a href="https://github.com/your-github-link" class="social-button"
          >GitHub</a
        >
        <a href="https://discord.gg/your-discord-link" class="social-button"
          >Discord</a
        >
      </div>
    </main>
    <Footer />
  </body>
</html>
